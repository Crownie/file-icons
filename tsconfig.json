{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "commonjs",
    "lib": ["esnext", "dom", "es2015.promise"],
    "allowJs": false,
    "declaration": true,
    "outDir": "dist",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "rootDirs": ["src", "test"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": ["node_modules", "dist", "tests"]
}
